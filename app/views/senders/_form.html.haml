= form_for @sender do |f|
  - if @sender.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sender.errors.count, "error")} prohibited this sender from being saved:"
      %ul
        - @sender.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
