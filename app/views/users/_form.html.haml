= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :login
    = f.text_field :login
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :password
    = f.text_field :password
  .field
    = f.label :sex
    = f.select(:sex, sex_options(f.object.sex))
  .field
    = f.label :bithday
    = f.date_select :bithday
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :last_login_in
    = f.datetime_select :last_login_in
  .field
    = f.label :rang
    = f.number_field :rang
  .actions
    = f.submit t('helpers.submit')
